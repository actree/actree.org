<section class="container">
  <article class="pure-g blog-post">
      <header class="pure-u-1">
          <div class="category">{{data.post.category.name}}</div>
          <h1 class="title">{{data.post.title}}</h1>
          <summary class="meta">
              <p>{{data.post.content.brief}}</p>
              {{#if data.post.author.name.first}}<em>von</em> {{data.post.author.name.first}}{{/if}}
          </summary>
          {{#if data.post.image.url}}
            <div class="title-image">
                <img src="{{{cloudinaryUrl data.post.image width=1400 height=300 crop='fill' }}}">
                {{#if data.post.imageCredit}}<div class="credit">{{{data.post.imageCredit.html}}}</div>{{/if}}
            {{/if}}
      </header>

      <aside class="pure-u-1 pure-u-lg-9-24">
          Ver√∂ffentlicht am <strong>{{date data.post.publishedDate format="DD.MM.YYYY"}}</strong><br>
          Kategorie <strong>{{data.post.category.name}}</strong><br>
      </aside>
      <section class="is-copy pure-u-1 pure-u-lg-15-24">
          {{{data.post.content.extended.html}}}
      </section>

  </article>
</section>

{{#if data.post.showComments}}
<section class="comments">
  <header class="comments-header">
    <div class="container pure-g">
      <div class="pure-u-9-24"></div>
        <div class="pure-u-15-24">
          <h3 class="comments-title">{{commentCount}} Kommentare</h3>
          {{#unless showCreateComment}}<button class="js-toggle-comment">Kommentieren</button>{{/unless}}
        </div>
      </div>

  </header>

  <div class="container pure-g">
    <div class="pure-u-9-24"></div>
    <div class="pure-u-15-24">
      {{#if showCreateComment }}
          <div class="">{{> createComment }}</div>
      {{/if}}
      {{#if showUnpublishedComment }}
          <div class="">{{> unpublishedComment }}</div>
      {{/if}}
      <ul class="">
        {{#each comments}}
          <li>{{> comment}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
{{/if}}
