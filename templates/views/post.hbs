<section class="container">
  <article class="BlogPost">
      <header class="BlogPost__header">
          <div class="BlogPost__category">{{data.post.category.name}} &bull; am {{date data.post.publishedDate format="DD.MM.YYYY"}} von {{data.post.author.name.first}}</div>
          <h1 class="BlogPost__title">{{data.post.title}}</h1>
          <summary class="BlogPost__meta">
              <p>{{data.post.content.brief}}</p>
          </summary>
          {{#if data.post.image.url}}
            <div class="BlogPost__image">
                <img src="{{{cloudinaryUrl data.post.image width=760 height=300 crop='fill' }}}">
                {{#if data.post.imageCredit}}<div class="BlogPost__image-credit">{{{data.post.imageCredit.html}}}</div>{{/if}}
            {{/if}}
      </header>

      <section class="BlogPost__content is-copy">
          {{{data.post.content.extended.html}}}
      </section>

      <footer class="BlogPost__author">
          <img src="{{#if data.post.author.avatar.url }}{{{cloudinaryUrl data.post.author.avatar width=128 height=128 crop='fill' }}}{{else}}{{{ gravatarUrl data.post.author }}}{{/if}}" alt="" />
          <div class="">
              <h4>{{ data.post.author.name.first }}</h4>
              <p>{{data.post.author.bio}}</p>
          </div>

      </footer>

      {{#if data.post.showComments}}
        <section class="BlogPost__comments comments">
          <h2 class="title-list">Diskussion</h2>

          <div class="">{{> commentForm }}</div>

          {{#if commentSubmitted}}
            <div id="new-comment" class="Toast">
              Wir haben deinen Kommentar erhalten und werden ihn so bald
              wie m&ouml;glich freischalten!
            </div>
          {{/if}}

          <div class="">
            {{#if showCreateComment }}
                <div class="">{{> createComment }}</div>
            {{/if}}
            {{#if showUnpublishedComment }}
                <div class="">{{> unpublishedComment }}</div>
            {{/if}}
            <ul class="">
              {{#each data.comments}}
                <li>{{> comment }}</li>
              {{/each}}
            </ul>
          </div>
        </section>
      {{/if}}

  </article>
</section>
